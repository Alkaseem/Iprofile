<% include ../partials/header %>

<div class="container mt-4">    
        <div class="row">
          <div class="col">
          </div>
          <div class="col-12 col-sm-12 col-lg-9">
            <div class="card shadow border-0">          
              <div class="card-body">
                <h1 class="text-center">Edit <%= currentUser.username %><em>Profile</em></h1>
                <p>
                  <small class="text-muted">Fields marked * are required.</small>
                </p>
                <form action="/web-devs/<%= profile._id %>?_method=PUT" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                  <div class="form-group">
                    <label for="">fullName*</label>
                    <input type="text" class="form-control" value="<%= profile.fullName %>" name="profile[fullName]" placeholder="Name" required>
                    <div class="invalid-feedback">
                      Please provide a campground name.
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="">Phone*</label>
                    <input type="number" class="form-control" value="<%= profile.phone %>" name="profile[phone]" placeholder="08065884254" required>
                    <div class="invalid-feedback">
                      Please provide a price.
                    </div>
                  </div>
                  <div class="form-group">
                        <label for="">Email*</label>
                        <input type="text" name="profile[email]" value="<%= profile.email %>" class="form-control" id="email" placeholder="john@smith.com" required>
                        <div class="invalid-feedback">
                          Please provide an email.
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="">Rank*</label>
                        <input type="text" name="profile[rank]" value="<%= profile.rank %>" class="form-control" id="" placeholder="web developer" required>
                        <div class="invalid-feedback">
                       Please provide an email.
                      </div>
                    </div>  
                  <label for="image">Image*</label>
                  <div class="input-group mb-3">
                    <div class="custom-file">
                      <input type="file" name="image" accept="image/*" class="custom-file-input" id="image" aria-describedby="inputGroupFileAddon01">
                      <div class="invalid-feedback">
                        Please upload an image of your campground.
                      </div>
                      <label class="custom-file-label" for="inputGroupFile01">Image*</label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description*</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="profile[description]" rows="3" required><%= profile.description %></textarea>
                    <div class="invalid-feedback">
                      Please provide a description of your campground.
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="location">Adress*</label>
                    <input type="text" class="form-control" value="<%= profile.adress %>" name="profile[adress]" placeholder="Yosemite National Park, CA" id="location" required>
                    <div class="invalid-feedback">
                      Please provide a valid location
                    </div>
                  </div>
                  <div class="form-row">
                        <div class="form-group col-md-4">
                          <label for="inputCity">Skills*</label>
                          <input type="text" class="form-control" value="<%= profile.skill1 %>" name="profile[skill1]" id="inputCity" placeholder="Skills1">
                        </div>
                        <div class="form-group col-md-4">
                              <label for="inputCity">2</label>
                              <input type="text" class="form-control" value="<%= profile.skill2 %>" name="profile[skill2]" id="inputCity" placeholder="Skills3">
                            </div>
                        <div class="form-group col-md-4">
                          <label for="inputZip">3</label>
                          <input type="text" class="form-control" value="<%= profile.skill3 %>" name="profile[skill3]" id="inputZip" placeholder="Skills3">
                        </div>
                      </div>
                      <div class="form-row">
                            <div class="form-group col-md-4 ">
                              <label for="inputCity">Languages*</label>
                              <label for="inputCity"></label>
                              <input type="text" class="form-control" value="<%= profile.lan1 %>" name="profile[lang1]" id="inputCity" placeholder="Lang1">
                            </div>
                            <div class="form-group col-md-4">
                              <label for="inputCity">2</label>
                              <input type="text" class="form-control" value="<%= profile.lang2 %>" name="profile[lang2]" id="inputCity" placeholder="Lang2">
                            </div>
                            <div class="form-group col-md-4">
                              <label for="inputZip">3</label>
                              <input type="text" class="form-control" value="<%= profile.lang3 %>" name="profile[lang3]" id="inputZip" placeholder="Lang3">
                            </div>
                          </div>
                    <label for="">Secondry School*</label>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.secondrySch %>" name="profile[secondrySch]" placeholder="School Name" required>
                      <div class="invalid-feedback">
                        Please provide a booking window.
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.date1 %>" name="profile[date1]" placeholder="Date" required>
                    </div>
                  </div>
                  <label for="">Tertiary School*</label>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.tertiarySch %>" name="profile[tertiarySch]" placeholder="School Name" required>
                      <div class="invalid-feedback">
                        Please provide a booking window.
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.date2 %>" name="profile[date2]" placeholder="Date" required>
                    </div>
                  </div>
                  <label for="">Others*</label>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.others %>" name="profile[others]" placeholder="School Name" required>
                      <div class="invalid-feedback">
                        Please provide a booking window.
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" value="<%= profile.date3 %>" name="profile[date3]" placeholder="Date" required>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-warning btn-block">Submit</button>
                </form>
                <a class="btn btn-link" href="/web-devs">Go Back</a>
              </div>
    
            </div>
    
          </div>
          <div class="col">
    
          </div>
        </div>
    
      </div>
    

<% include ../partials/footer %>